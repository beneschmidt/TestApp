<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobile.app.dev"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="18" />

    <uses-permission android:name="de.htwds.mada.todo" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mobile.app.dev.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Auslesehilfsfunktion fÃ¼r die Todos -->
        <activity
            android:name="mobile.app.dev.ueb07.TodoReaderActivity"
            android:label="TodoReader"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        <activity
            android:name="mobile.app.dev.ueb07.TodoUpdaterActivity"
            android:label="TodoUpdater"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        <activity
            android:name="mobile.app.dev.ueb07.PriorityUpdaterActivity"
            android:label="PriorityUpdater"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo" >
        </activity>
    </application>

</manifest>